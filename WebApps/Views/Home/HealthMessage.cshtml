@model double
@using ConsoleAppProject.App02
@{ 
    ViewData["Title"] = "Health Message";
 }

@{ 
    BMI_Calculator bmi = new BMI_Calculator();
    bmi.BmiIndex = Model;
}

<header class="jumbotron">
    <h1>BMI Health Message</h1>
    <h2>by Hamood Jaffery</h2>
</header>
<section>
    <h2>Your BMI Index</h2>
    <p class="text-lead">
        @bmi.DisplayWeightStatus()
    </p>
    <h2>BAME Message</h2>
    <p class="text-info">
        @bmi.DisplayRiskMessage()
    </p>
</section>

